<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/PriorityDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingEnd="5dp"
    android:paddingStart="5dp"
    android:paddingTop="15dp">

    <LinearLayout
        android:id="@+id/Urgent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/touch_bg"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="6dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="6dp"
        android:touchscreenBlocksFocus="false">

        <CheckedTextView
            android:id="@+id/tvUrgent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkMark="?android:attr/listChoiceIndicatorSingle"
            android:gravity="center_vertical"
            android:text="紧急"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="此级别的任务很急迫，需要优先处理，最佳的做法是立即完成该任务"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/VeryImprotant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/touch_bg"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="6dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="6dp">

        <CheckedTextView
            android:id="@+id/tvVeryImprotant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkMark="?android:attr/listChoiceIndicatorSingle"
            android:gravity="center_vertical"
            android:text="非常重要"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="此级别的任务很重要，需要特别重视，应当保证在指定的时间内稳妥地完成"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Improtant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/touch_bg"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="6dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="6dp">

        <CheckedTextView
            android:id="@+id/tvImprotant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkMark="?android:attr/listChoiceIndicatorSingle"
            android:gravity="center_vertical"
            android:text="重要"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="此级别的任务应给予特别地关注，时常回顾一下，并洞察实施环境，在最恰当的时刻完成它！"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Focus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/touch_bg"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="6dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="6dp">

        <CheckedTextView
            android:id="@+id/tvFocus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkMark="?android:attr/listChoiceIndicatorSingle"
            android:gravity="center_vertical"
            android:text="关注"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="这是常规的任务，按照日常的习惯完成就好了"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>