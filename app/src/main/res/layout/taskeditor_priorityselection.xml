<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PriorityDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingEnd="5dp"
    android:paddingStart="5dp"
    android:paddingTop="15dp">

    <LinearLayout
        android:id="@+id/Urgent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="6dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="6dp"
        android:touchscreenBlocksFocus="false">

        <CheckedTextView
            android:id="@+id/tvUrgent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/touch_bg"
            android:backgroundTint="@color/colorPrimary"
            android:checkMark="?android:attr/listChoiceIndicatorSingle"
            android:checkMarkTint="@color/primary_lighttext"
            android:gravity="center_vertical"
            android:text="紧急"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/primary_lighttext"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/VeryImprotant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="6dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="6dp">

        <CheckedTextView
            android:id="@+id/tvVeryImprotant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/touch_bg"
            android:backgroundTint="@color/colorPrimary"
            android:checkMark="?android:attr/listChoiceIndicatorSingle"
            android:checkMarkTint="@color/primary_lighttext"
            android:gravity="center_vertical"
            android:text="非常重要"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/primary_lighttext"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Improtant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="6dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="6dp">

        <CheckedTextView
            android:id="@+id/tvImprotant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/touch_bg"
            android:backgroundTint="@color/colorPrimary"
            android:checkMark="?android:attr/listChoiceIndicatorSingle"
            android:checkMarkTint="@color/primary_lighttext"
            android:gravity="center_vertical"
            android:text="重要"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/primary_lighttext"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Focus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="6dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="6dp">

        <CheckedTextView
            android:id="@+id/tvFocus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/touch_bg"
            android:backgroundTint="@color/colorPrimary"
            android:checkMark="?android:attr/listChoiceIndicatorSingle"
            android:checkMarkTint="@color/primary_lighttext"
            android:gravity="center_vertical"
            android:text="关注"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/primary_lighttext"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>